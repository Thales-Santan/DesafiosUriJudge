import java.util.Scanner;
import java.text.NumberFormat;
public class Uri1008 {

	public static void main(String[] args) {
	int numeroFuncionario,horaTrabalhada;
	double salario = 0.00,valorHora=0.00;
	
	Scanner ler = new Scanner(System.in);
	System.out.println("Digite o número do funcionário: ");
	 numeroFuncionario = ler.nextInt();
	System.out.println("Digite o número de horas trabalhadas: ");
		horaTrabalhada = ler.nextInt();
	System.out.println("Digite o valor recebido por hora: ");
		valorHora = ler.nextDouble();
	
	salario = valorHora * horaTrabalhada;
	
	System.out.printf("NUMBER = %d",numeroFuncionario);
	System.out.printf("\nSALARY = U$ %.2f"+salario);
	
	ler.close();
	
	
	}

}
